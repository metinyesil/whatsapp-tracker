{
  "manifest_version": 2,
  "name": "WhatsApp Online Takip",
  "description": "Whatsapp'ta Birinin Son Görülmesini Takip Etmeye Yarayan Bot",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "notifications"
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  }
}
